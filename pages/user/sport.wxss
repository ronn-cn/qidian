/* pages/user/sport.wxss */

.page-bg{
    background-image: linear-gradient(-45deg,#ffffff 60%, #d7f9fa, #dcebfd);
}

.z-ii{
    width: 100%;
    height: 1000px;
    position: absolute;
    /* background-color: #4b85fe; */
    top: 0;
}
ec-canvas {
    width: 100%;
    height: 100%;
}

.main {
    width: 100%;
    min-height: 90vh;
    /* background-image: linear-gradient(to bottom, #4b85fe, #dbe5f3, #fff); */
}

.sport-data-a {
    height: 300rpx;
}

.sport-data-a .block-left {}

.circle-out {
    width: 200rpx;
    height: 200rpx;
    /* border: 15rpx solid #8beffe; */
    border-radius: 50%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* background-color: #ffffff; */
    background-size: cover;
}

.circle-bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.circle-in {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    line-height: 150rpx;
    font-size: 60rpx;
    text-align: center;
}

.block-right {
    padding: 10px;
}

.block-right .block-title {
    height: 50%;
    font-size: 32rpx;
    font-weight: bold;
    position: relative;
}

.block-right .block-title text {
    position: absolute;
    bottom: 15rpx;
}

.block-right .block-desc {
    color: #9a9999;
    padding-right: 20rpx;
    height: 50%;
    font-size: 24rpx;
}

.sport-data-b {
    width: 95%;
    background-color: white;
    margin: 20rpx auto;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 1rpx 1rpx 10rpx #ccc;
}

.sport-data-b .card-title {
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 20rpx;
}

.sport-data-b .card-title .title {
    font-size: 32rpx;
    font-weight: bold;
}

.sport-data-b .card-title .tip {
    font-weight: bold;
    color: #ccc;
}

.sport-data-b .card-content {
    min-height: 200rpx;
    position: relative;
}

.height-600{
    height: 600rpx;
}

.cu-list.menu>.cu-item .content>image{
    /* display: inline-block;
    height: 1.6em;
    line-height: 1.6em; */
    float: left;
}

.cu-list.menu>.cu-item .action{
    font-weight: bold;
}

.cu-list.menu>.cu-item .normal{
	display: inline-block;
	height: 50rpx;
    line-height: 50rpx;
    margin: 10rpx;
	padding: 0 15rpx;
	background-color: #eaeaea;
	border-radius: 10rpx;
}

.next-image{
    width: 50rpx;
    height: 50rpx;
    margin-top: 5rpx;
}

.ident-a{
	color: #72eb22;
}
.ident-b{
	color: #3476fe;
}
.ident-c{
	color: #ffa346;
}
