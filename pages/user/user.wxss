/* components/user/index.wxss */

.container{
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.fl{
    float: left;
}

.fr{
    float: right;
}
.user-info-box{
  height: 110rpx;
  font-size: 28rpx;
}
.no-user-text{
  line-height: 50rpx;
  font-size: 28rpx;
  color: #465677;
}

.user-info-box .has-user{
    width: 80%;
}

.avatar-image{
  width: 80rpx;
  height: 80rpx;
}

.user-info-box .has-user .user-info-avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #fff;
    margin-top: 25rpx;
    float: left;
}

.user-info-nick{
  color:#465677;
  font-size: 28rpx;
  font-weight: 700;
  text-align: left;
  line-height: 40rpx;
}
.nologin {
  color:#465677;
  font-size: 28rpx;
  font-weight: 700;
  text-align: left;
  line-height: 80rpx;
}

.user-info-sex{
  color: #7989AA;
  text-align: left;
}

.user-info-sex-i{
    display: inline-block;
    width: 80rpx;
}

.user-info-box .has-user .user-info-avatar .user-info-avatar-image{
    width: 100%;
    height: 100%;
}

.card-info{
  padding: 0 30rpx;
  height: 150rpx;
  background-color: #f7e1b4;
  border-radius: 24rpx;
  justify-content: center;
  align-items: center;
  justify-content: space-between;
  display: flex;
  color: rgba(0, 0, 0, 0.54);
  font-size: 24rpx;
}

.card-info .card-title{
  font-size: 40rpx;
}
.card-info .card-text{
  font-size: 20rpx;
}

.user-option-box{
    /* background-color: white; */
    border-radius: 15px 15px 0 0;
    padding-top: 1px;
}

.user-option-card{
    width: 90%;
    height: 250rpx;
    margin: 40rpx auto;
    border-radius: 10px;
}

.user-option-card .card-left{
    width: 25%;
    height: 100%;
    padding: 10rpx;
    display: flex;
    
    justify-content: center;
    align-items: center;
}

/* .user-option-card .card-left image{
} */

.user-option-card .card-mid {
    width: 60%;
    height: 80px;
    color: white;
    /* font-weight: bold; */
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-mid .text-1{
    font-size: 18px;
    display: inline-block;
    width: 50%;
}

.user-option-card .card-mid .text-2{
    display: inline-block;
    width: 47%;
    font-size: 22rpx;
    text-align: right;
}

.user-option-card .card-mid .text-2 .big{
    font-size: 32rpx;
}

.user-option-card .card-mid .text-3{
    display: inline-block;
    margin-top: 20rpx;
    font-size: 22rpx;
}

.user-option-card .card-right{
    width: 12%;
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-right .cuIcon-roundrightfill{
    color: white;
    font-size: 48rpx;
}

.icon-goin{
  width: 48rpx;
  height: 48rpx;
}

.user-option-logout{
    width: 90%;
    margin: 60rpx auto 20rpx auto;
    --button-border-radius: 24rpx;
    --button-plain-background-color: transparent !important;
}

.group-custom{
  padding: 0px;
  margin: 0 !important;
  
}

.cell-custom{
  border-radius: 24rpx !important;
  background-image: url(https://www.evinf.cn/images/sport-bg.png) 100% 100%;
}

.cell-box{
  color: #fff;
  border-radius: 24rpx;
  height: 180rpx;
  display: flex;
  align-items:center;
  justify-content: center;
}
.sport-box{
  background-image: url(https://www.evinf.cn/images/sport-bg.png);
  background-size: 100% 100%;
}
.vitality-box{
  background-image: url(https://www.evinf.cn/images/vitality-bg.png);
  background-size: 100% 100%;
}
.sport-content{
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
  white-space: pre-wrap;
}

.plan-box{
  color: #fff;
  border-radius: 24rpx;
  height: 110rpx;
  display: flex;
  align-items:center;
  justify-content: space-between;
  /* justify-content: center; */
  background-image: url(https://www.evinf.cn/images/plan-bg.png);
  background-size: 100% 100%;
  padding:0 20rpx 0 0;
}

.title-class{
  color: #576B95;
}