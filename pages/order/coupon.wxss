/* pages/user/coupon.wxss */
.main{
  background-image: linear-gradient(-45deg,#f5f5f5 50%, #e0fcfc, #dbeafd);
  background-size: 100% 1200px;
}

.container{
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  color: #465677;
}

.coupon-box{
  margin: 20rpx 0;
  padding: 0 24rpx;
  background: radial-gradient(circle at left, transparent 20rpx, #fff 0) left,
  radial-gradient(circle at right, transparent 20rpx, #fff 0) right;
  background-repeat: no-repeat;
  background-size: 50% 100%;
  border-radius: 10rpx;
  height: 220rpx;
  display: flex;
  align-items:center;
  justify-content: space-between;
  /* position:relative; */
}

.coupon-box .coupon-title{
  color: #465677;
  font-size: 0.9em;
  display: flex;
  align-items: center;
  line-height: 60rpx;
}

.coupon-box .coupon-use{
  color: #9ba4b5;
  font-size: 0.6rem;
  line-height: 50rpx;
}

.coupon-box .coupon-use .coupon-use-text{
  font-size: 0.6rem;
}

.coupon-box .coupon-date{
  color: #9ba4b5;
  font-size: 0.7rem;
  line-height: 50rpx;
}

.coupon-box .coupon-number{
  color: #FD5E36;
  font-size: 40rpx;
}

.coupon-box text{
  font-size: 80rpx;
}

.coupon-box .coupon-tip{
  font-size: 20rpx;
  align-items: center;
  text-align: center;
}

.btn-custom{
  width: 140rpx;
  margin-right: 10rpx;
}

.no-coupon{
  height:100%;
  display: flex; 
  align-items: center; 
  justify-content: center;
}