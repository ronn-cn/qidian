    </view>
    <view class="icon-block icon-4">
      <view class="icon-back">
        <image class="icon-image" src="/images/home/意见反馈.png"></image>
      </view>
      <text class="icon-text">意见反馈</text>
    </view>
    <!-- 清除浮动 -->
    <view class="clear-float"></view> 
  </view>
  <!-- 段落3 -->
  <view class="section section-3">
    <view class="header">
      <text class="header-title">附近门店</text>
      <button class="header-btn">切换门店</button>
      <view class="clear-float"></view>
    </view>
    <view class="card">
      <view class="card-header">
        <image class="card-image" src="/images/home/门店封面.png" mode="widthFix"></image>
      </view>
