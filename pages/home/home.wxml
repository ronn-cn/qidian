        <view class="card-body-title">
          <image class="card-body-logo" src="/images/home/奇点运动logo.png" mode="widthFix"></image>
          <text class="card-body-text">奇点运动黄岛一店 <text class="small-text">[营业中]</text></text>
          <view class="clear-float"></view>
        </view>
        <view class="card-body-info">
          <view>
            <text>7*24h自助健身</text>
            <text>按月付费</text>
          </view>
          <view>
            <text>面积120m2</text>
            <text>基础服务</text>
            <text>器械设施</text>
          </view>
          <view>></view>
        </view>
      </view>
      <view class="card-footer">
        <view>
          <image></image>
        </view>
        <view>
          <text></text>
        </view>
        <view>
          <view>
            <image></image>
            <text></text>
          </view>
          <view>
            <image></image>
            <text></text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="section section-4">
    <image></image>
  </view>
</view>
