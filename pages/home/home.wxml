        <view>
          <view class="nickname">Memorial | 勇敢的心</view>
          <view class="tips">门店VIP会员未开通</view>
        </view>
      </view>
      <view class="right">
        <button class="open-btn" bindtap="OpenMember">开通</button>
      </view>
      <view class="clear-float"></view>
    </view>
  </view>
  <!-- 段落2 ，可以使用for循环显示 -->
  <view class="section section-2">
    <view class="icon-block icon-1">
      <view class="icon-back">
        <image class="icon-image" src="/images/home/扫一扫.png"></image>
      </view>
      <text class="icon-text">扫一扫</text>
    </view>
    <view class="icon-block icon-2">
      <view class="icon-back">
        <image class="icon-image" src="/images/home/训练计划.png"></image>
      </view>
      <text class="icon-text">训练计划</text>
    </view>
    <view class="icon-block icon-3">
