<!--pages/login/index.wxml-->

<cu-custom isBack="{{false}}" isCustom="{{false}}" isHome="{{true}}">
    <view slot="content">扫码登录</view>
</cu-custom>
<view class="main">
    <view class="header">
        <view class="userinfo">
            <block wx:if="{{canIUseOpenData}}">
                <view class="userinfo-avatar">
                    <open-data type="userAvatarUrl"></open-data>
                </view>
                <open-data type="userNickName"></open-data>
            </block>
        </view>
    </view>
    <view class="middle">
        <view class="middle-top">
            <image class="image-device-img" src="/images/login/device-5.jpg" mode="heightFix"></image>
        </view>
        <view class="middle-bottom">
            <text class="text-device-name">智能健身设备</text>
        </view>
    </view>
    <view class="footer">
        <button class="btn-login-device" bindtap="loginDevice">确定登录设备</button>
    </view>
</view>