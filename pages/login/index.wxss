/* pages/login/index.wxss */
.userinfo {
    color: #aaa;
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx;
}
  
.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    max-width: 100px;
    height: 128rpx;
    max-height: 100px;
    border-radius: 50%;
}

.btn-login-device{
    font-weight: lighter;
    font-size: 16px;
    background-color:#427ffe;
    color: white;
}

.text-device-name{
    font-size: 18px;
    font-weight: bold;
}

.header{
    display: block;
    width: 100%;
}

.header-home{
    position: relative;
    top: 35px
}

.middle{
    height: 65vh;
    text-align: center;
}

.middle .middle-top{
    width: 100%;
    height: 90%;
    padding: 20px 0;
}

.middle .middle-top image{
    height: 100%;
}

.footer{
    position: absolute;
    bottom: 0;

    width: 100%;
    height: 15vh;

    display: flex;
    align-items: center;
}

.footer .btn-login-device{
    width: 90%;
}