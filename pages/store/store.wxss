/* pages/user/coupon.wxss */
page{
  background-image: linear-gradient(-45deg,#f5f5f5 50%, #e0fcfc, #dbeafd); 
  background-size: 100% 830px;
}

.container{
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  color: #465677;
}

.store-box{
  margin: 20rpx 0;
  padding: 0 24rpx;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 50% 100%;
  border-radius: 10rpx;
  height: 160rpx;
  display: flex;
  align-items:center;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 600;
}
.store-box .store-left{
  display: flex;
  align-items:center;
}
.store-box .store-name{
  display: inline;
  line-height: 40rpx;
  padding: 0 20rpx;
}

.store-box .store-address{
  font-size: 16rpx;
  display: flex;
  align-items: center;
  line-height: 60rpx;
}
