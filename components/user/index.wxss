/* components/user/index.wxss */



.fl{
    float: left;
}

.fr{
    float: right;
}
.user-info-box{
  width: 90%;
  height: 200rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 auto;
}
.no-user-text{
  font-size: 28rpx;
  color: #7989AA;
}

.user-info-box .has-user{
    width: 80%;
    /* position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); */
}

.avatar-image{
  width: 140rpx;
  height: 140rpx;
}

.user-info-box .has-user .user-info-avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #fff;
    margin-top: 25rpx;
    float: left;
}

.user-info-nick{
  color:#465677;
  font-size: 32rpx;
  font-weight: 700;
  text-align: left;
  line-height: 80rpx;
}

.user-info-sex{
  color: #7989AA;
  text-align: left;
}

.user-info-sex-i{
    display: inline-block;
    width: 80rpx;
}

.user-info-medal{
    display: inline-block;
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 25rpx;
    background-color: black;
    color: white;
    font-size: 12px;
}


.user-info-medal-image{
    width: 40rpx;
    height: 40rpx;
    margin: 5rpx 10rpx;
    float: left;
}

.user-info-medal-text{
    padding-right: 20rpx;
}

.user-info-medal-text-text{
    color: #ffd15b;
}

.user-info-box .has-user .user-info-avatar .user-info-avatar-image{
    width: 100%;
    height: 100%;
}

.user-option-box{
    /* background-color: white; */
    border-radius: 15px 15px 0 0;
    padding-top: 1px;
}

.user-option-card{
    width: 90%;
    height: 250rpx;
    margin: 40rpx auto;
    border-radius: 10px;
}

.line-box{
  margin: 0 auto;
  width: 90%;
  height: 4rpx;
  background-color: rgba(134, 150, 187, 0.15);
}

.card-bg-1{
    background-image: linear-gradient(to right, #4aadeb, #e99b92);
}
.card-bg-2{
    background-image: linear-gradient(to right, #c45260, #448494);
}
.card-bg-3{
    background-image: linear-gradient(to right, #5257ce, #f9bf78);
}

.user-option-card .card-left{
    width: 25%;
    height: 100%;
    padding: 10rpx;
    display: flex;
    
    justify-content: center;
    align-items: center;
}

/* .user-option-card .card-left image{
} */

.user-option-card .card-mid {
    width: 60%;
    height: 80px;
    color: white;
    /* font-weight: bold; */
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-mid .text-1{
    font-size: 18px;
    display: inline-block;
    width: 50%;
}

.user-option-card .card-mid .text-2{
    display: inline-block;
    width: 47%;
    font-size: 22rpx;
    text-align: right;
}

.user-option-card .card-mid .text-2 .big{
    font-size: 32rpx;
}

.user-option-card .card-mid .text-3{
    display: inline-block;
    margin-top: 20rpx;
    font-size: 22rpx;
}

.user-option-card .card-right{
    width: 12%;
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-right .cuIcon-roundrightfill{
    color: white;
    font-size: 48rpx;
}

.icon-goin{
  width: 48rpx;
  height: 48rpx;
}

.user-option-logout{
    width: 90%;
    margin: 60rpx auto 20rpx auto;
    --button-border-radius: 24rpx;
    --button-plain-background-color: transparent !important;
}