/* components/user/index.wxss */

.main{
    width: 100%;
    background-image: linear-gradient(to bottom, #4b85fe, #dbe5f3, #fff);
}

.fl{
    float: left;
}

.fr{
    float: right;
}

.user-info-box{
    width: 100%;
    height: 150px;
}
.user-info-box .no-user{
    width: 100%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.user-info-box .no-user .cu-btn{
    width: 80%;
    font-weight: lighter;
}

.user-info-box .has-user{
    width: 80%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.clear {
    clear: both;
}

.user-info-box .has-user .user-info-avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 1px solid #23b0ed;
    float: left;
}

.user-info-box .has-user .user-info-name{
    color: white;
    width: 400rpx;
    height: 150rpx;
    line-height: 75rpx;
    float: right;
}

.user-info-nick{
    font-weight: bold;
}

.user-info-medal{
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 25rpx;
    background-color: black;
    color: #f0ef61;
    font-size: 10px;
}

.user-info-box .has-user .user-info-avatar .user-info-avatar-image{
    width: 100%;
    height: 100%;
}

.user-option-box{
    background-color: white;
    border-radius: 15px 15px 0 0;
    padding-top: 1px;
}

.user-option-card{
    width: 90%;
    height: 300rpx;
    margin:15px auto;
    border-radius: 10px;
}

.card-bg-1{
    background-image: linear-gradient(to right, #4aadeb, #e99b92);
}
.card-bg-2{
    background-image: linear-gradient(to right, #c45260, #448494);
}
.card-bg-3{
    background-image: linear-gradient(to right, #5257ce, #f9bf78);
}

.user-option-card .card-left{
    width: 25%;
    height: 100%;
    padding: 10rpx;
    display: flex;
    
    justify-content: center;
    align-items: center;
}

/* .user-option-card .card-left image{
} */

.user-option-card .card-mid {
    width: 55%;
    height: 80px;
    color: white;
    font-weight: bold;
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-mid .text-1{
    font-size: 18px;
    display: inline-block;
    width: 50%;
}

.user-option-card .card-mid .text-2{
    font-size: 10px;
}

.user-option-card .card-mid .text-2 .big{
    font-size: 18px;
}

.user-option-card .card-mid .text-3{
    display: inline-block;
    margin-top: 20px;
    font-size: 10px;
}

.user-option-card .card-right{
    width: 10%;
    position: relative;
    top: 50%;
    transform: translate(0%, -50%);
}

.user-option-card .card-right .cuIcon-roundrightfill{
    color: white;
    font-size: 24px;
}

.user-option-logout{
    width: 90%;
    margin: 10px auto;
}

.user-option-logout .cu-btn{
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    background-color: #fff;
    color: #4b85fe;
    border: 2px solid #4b85fe;
}