/* components/home/index.wxss */

.main{
    width: 100%;
    background-image: linear-gradient(to bottom, #4b85fe, #dbe5f3, #fff);
}

.scan-box{
    width: 100%;
    height: 280px;
    padding-top: 50px;
}

.scan-button{
    width: 180px;
    height: 180px;
    margin: 0 auto;
    background-color: white;
    border-radius: 50%;
    border: 1px solid #dbe5f3;
    box-shadow: 1px 0 15px #dbe5f3;
}

.scan-button .scan-button-image{
    width: 60px;
    height: 60px;
    position: relative;
    top: 89px;
    left: 89px;
    transform: translate(-50%, -50%);
}

.scan-button-text{
    text-align: center;
    font-size: 10px;
    color: #ccc;
    margin-top: 65px;
}

.card-item{
    width: 90%;
    height: 100px;
    background: white;
    margin: 15px auto;
    box-shadow: 3px 0px 5px #ccc;
    border-radius: 5px;
    font-weight: bold;
}

.card-item-left{
    width: 65%;
    float: left;
}

.card-item-left-title{
    display: block;
    width: 50px;
    height: 25px;
    line-height: 25px;
    text-align: center;
    color: white;
    background-color: #4b85fe;
    border-radius: 5px 0px 5px 0px;
}

.card-item-left-text{
    display: block;
    margin-top: 15px;
    margin-left: 25px;
}

.card-item-right{
    width: 35%;
    height: 100%;
    padding: 5px;
    float: right;

    display: flex;
    justify-content: center;
    align-items: center;
}


.card-item-content-text{
    float: left;
    display: inline-block;
}

.bottom-box{
    width: 90%;
    height: 25px;
    line-height: 25px;
    text-align: center;
    color: #aaa;
    font-size: 10px;
    margin: 0 auto;
    background-color: #fff;
}